<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/ll_title_bar_root"
            layout="@layout/layout_title_bar_no_bg_with_status_bar" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F5F5F5"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_old_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/shape_rect_white_corners_8"
                    android:hint="请输入当前密码"
                    android:inputType="textVisiblePassword"
                    android:lines="1"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" />

                <EditText
                    android:id="@+id/et_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/shape_rect_white_corners_8"
                    android:hint="请输入新密码"
                    android:inputType="textVisiblePassword"
                    android:lines="1"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" />

                <EditText
                    android:id="@+id/et_new_password_2"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/shape_rect_white_corners_8"
                    android:hint="请输入新密码"
                    android:inputType="textVisiblePassword"
                    android:lines="1"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" />

                <TextView
                    android:id="@+id/tv_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/shape_rect_gradient_gold_corners_10"
                    android:gravity="center"
                    android:text="确认修改"
                    android:textSize="16dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.6"
                android:background="#f5f5f5"
                android:gravity="center"
                android:text="输入错误"
                android:textColor="@color/red" />
        </FrameLayout>

    </LinearLayout>
</FrameLayout>